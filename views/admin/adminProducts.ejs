<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
   <title>Admin Products</title>
</head>
<body>
   <div>
      <form id="productForm" method="POST">
         <div class="form-group mb-2"> 
            <label for="name">Product Name:</label>
            <input type="text" id="name" name="name" required> 
         </div>   
         <div class="form-group mb-2"> 
            <label for="category">Category:</label>
            <select id="category" name="category">
               <option value="">Choose category</option>
               <option value="men">Men</option>
               <option value="women">Women</option>
               <option value="children">Children</option>
            </select>            
         </div> 
         <div class="form-group mb-2">
            <label for="price">Unit Price:</label>
            <input type="text" name="price" id="price" required/>
         </div>         
         <div class="form-group mb-2">
            <label for="dateArrival">Date Arrival: </label>
            <input type="date" name="dateArrival" id="dateArrival" required>
         </div>
         <div class="form-group mb-2">
            <label for="photo">Photo</label>
            <input type="url" name="photo" id="photo" placeholder="insert a url..." required>
         </div>             
         <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      <div>
         <h1 class="mb-5">All Products</h1>
      </div>
      <ul>
         <% products.forEach(product => { %>
           <li><strong><%= product.name %></strong> - $<%= product.price %></li>
         <% }); %>
       </ul>
   </div>
   <script src="js/admin/products.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
</body>
</html>