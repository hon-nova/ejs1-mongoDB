<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdepvr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
      <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/homeproducts-style.css" />
    <title>Products PAGE</title>
  </head>
  <body>
    <div class="homeNavbard">
      <nav class="navbar" style="background-color: #e3f2fd;">  
         <div class="container-fluid">
            <div class="d-flex flex-space-between">
               <p class="mx-5"><a href="#">Icon</a></p>
               <p><a href="#">Products</a></p>
            </div>
            <div class="d-flex">
               <p class="mx-5"><a href="#">Profile</a></p>
               <p><a href="#">Contact Us</a></p>
            </div>    
            
         </div>      
      </nav>
    </div>
    <div class="start">
      <h1></h1>
    </div>    
    <h1>ALL PRODUCTS LAND HERE...</h1>
    <div>
      <table class="table table-striped">
        <thead>
          <th>_id</th>
          <th>name</th>
          <th>Category</th>
        </thead>
        <tbody>
          <% products.forEach((product,index) => { %>
          <tr>
            <td><%= product._id%> <%= index %></td>
            <td><%= product.name %></td>
            <td><%= product.category%></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script>
      document.addEventListener('DOMContentLoaded',()=>{
         let username = sessionStorage.getItem('username')
      if (username){
         document.getElementsByTagName('h1')[0].innerHTML=`Hello ${username}`
      }
      })   
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script scr="js/home/products.js"></script>
  </body>
</html>
