<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdepvr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
      <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/homeproducts-style.css" />
    <title>Products PAGE</title>
  </head>
  <body>
    <div class="homeNavbard">
      <nav class="navbar" style="background-color: #e3f2fd;">  
         <div class="container-fluid">
            <div class="d-flex flex-space-between">
               <p class="mx-5"><a href="#">Icon</a></p>
               <p><a href="#">Products</a></p>
            </div>
            <div class="d-flex">
               <p class="mx-5"><a href="#">Profile</a></p>
               <p><a href="#">Contact Us</a></p>
            </div>            
         </div>      
      </nav>
    </div>
    <div class="start">
      <h1></h1>
    </div>    
    <h1>ALL PRODUCTS LAND HERE...</h1>
    <div class="container-fluid">
      <div class="row g-1 mb-2 justify-content-center">
         <% products.forEach((product,index) => { %>
            <div class="col-md-3" style="border:1px solid #e2aacb ;border-radius:20px;padding:20px;margin:20px;">
               <p><%= product.name %></p>
               <img src="<%= product.photo%>" width="300" height="300" alt="photo"/>             
               <p><strong>$<%= product.price%></strong></p>
               <button style="background-color:#fe019a;color:white;font-size:bold;float:right;border-radius:10px;padding:5px;border:none;">Add to Cart</button>
            </div>
         <% }) %>
      </div>
      
    </div>
    <script>
      document.addEventListener('DOMContentLoaded',()=>{
         let username = sessionStorage.getItem('username')
      if (username){
         document.getElementsByTagName('h1')[0].innerHTML=`Hello ${username}`
      }
      })   
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script scr="js/home/products.js"></script>
  </body>
</html>
